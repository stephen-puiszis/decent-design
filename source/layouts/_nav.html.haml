%header.mdl-layout__header
  .mdl-layout__header-row
    %span.mdl-layout-title Decent Design
    .mdl-layout-spacer
    .mdl-textfield.mdl-js-textfield.mdl-textfield--expandable.mdl-textfield--floating-label.mdl-textfield--align-right.mdl-textfield--full-width
      %label.mdl-button.mdl-js-button.mdl-button--icon{ for: "search-field" }
        %i.material-icons search
      .mdl-textfield__expandable-holder
        %input#search-field.mdl-textfield__input{ type: "text" }
    %nav.mdl-navigation.mdl-layout--large-screen-only
      = link_to 'Home', '/', class: 'mdl-navigation__link'
      = link_to 'Elements', '/elements', class: 'mdl-navigation__link'
      = link_to 'Devices', '/devices', class: 'mdl-navigation__link'
      = link_to 'Industries', '/industries', class: 'mdl-navigation__link'
      = link_to 'Companies', '/companies', class: 'mdl-navigation__link'
.mdl-layout__drawer
  %span.mdl-layout-title Title
  %nav.mdl-navigation
    = link_to 'Elements', '/elements', class: 'mdl-navigation__link'
    = link_to 'Devices', '/devices', class: 'mdl-navigation__link'
    = link_to 'Industries', '/industries', class: 'mdl-navigation__link'
    = link_to 'Companies', '/companies', class: 'mdl-navigation__link'
